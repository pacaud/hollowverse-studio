{
  "paths": {
    "/voxia/manifest": {
      "get": {
        "tags": ["Voxia"],
        "summary": "Load Voxia voice package",
        "description": "Loads the Voxia manifest and resolves tone, behaviour, and override markdown files into a single JSON package.",
        "operationId": "get_voxia_manifest",
        "responses": {
          "200": {
            "description": "Voxia package loaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "kind": { "type": "string", "example": "voxia_package" },
                    "manifest": { "type": "object" },
                    "tone": { "type": "string" },
                    "behaviour": { "type": "string" },
                    "overrides": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Server error loading Voxia package" }
        },
        "security": [{ "ApiKeyAuth": [] }]
      }
    }
  }
}